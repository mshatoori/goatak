{
	"mcpServers": {
		"language-server": {
			"command": "mcp-language-server",
			"args": [
				"--workspace",
				".",
				"--lsp",
				"gopls"
			],
			"timeout": 15,
			"alwaysAllow": [
				"definition",
				"diagnostics",
				"edit_file",
				"hover",
				"references",
				"rename_symbol"
			],
			"disabled": false
		},
		"git": {
			"command": "docker",
			"args": [
				"run",
				"--rm",
				"-i",
				"--mount",
				"type=bind,src=D:/Montazeri/goatak,dst=/workspace",
				"mcp/git"
			],
			"alwaysAllow": [
				"git_status",
				"git_diff_unstaged",
				"git_diff_staged",
				"git_diff",
				"git_commit",
				"git_add",
				"git_reset",
				"git_log",
				"git_create_branch",
				"git_checkout",
				"git_show",
				"git_init"
			]
		}
	}
}